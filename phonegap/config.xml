<?xml version='1.0' encoding='utf-8'?>
<widget
		id="zakandaiev.stalkerpda"
		version="1.1.1"
		xmlns="http://www.w3.org/ns/widgets"
		xmlns:gap="http://phonegap.com/ns/1.0"
		xmlns:cdv="http://cordova.apache.org/ns/1.0"
>

  <name>Сталкерский КПК</name>
  <description>Сталкерский КПК - это карманный помощник, который содержит в себе онлайн и оффлайн карту, дождевую карту реального времени, сталкерские анекдоты, генератор сталкерских имён, стилизацию пда под себя.</description>
  <author href="https://github.com/zakandaiev" email="zakandaiev@gmail.com">Zakandaiev</author>
  
  <content src="index.html"/>
  <icon src="icon.png" />
  
  <preference name="Fullscreen" value="true" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="phonegap-version" value="cli-8.0.0" />
  <preference name="android-minSdkVersion" value="21" />
  
  <!-- Plugins -->
  
  <!-- cordova-plugin-splashscreen -->
  <plugin name="cordova-plugin-splashscreen" source="npm" spec="6.0.0" />
  <preference name="SplashScreenDelay" value="2000" />  
  <preference name="AutoHideSplashScreen" value="true" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="SplashShowOnlyFirstTime" value="false" />
  <preference name="ShowSplashScreenSpinner" value="false" />
  <platform name="android">
  	<splash src="splashscreen/android/land-hdpi.png" density="land-hdpi" />
  	<splash src="splashscreen/android/land-ldpi.png" density="land-ldpi" />
  	<splash src="splashscreen/android/land-mdpi.png" density="land-mdpi" />
  	<splash src="splashscreen/android/land-xhdpi.png" density="land-xhdpi" />
  	<splash src="splashscreen/android/land-xxhdpi.png" density="land-xxhdpi" />
  	<splash src="splashscreen/android/land-xxxhdpi.png" density="land-xxxhdpi" />
  	<splash src="splashscreen/android/port-hdpi.png" density="port-hdpi" />
  	<splash src="splashscreen/android/port-ldpi.png" density="port-ldpi" />
  	<splash src="splashscreen/android/port-mdpi.png" density="port-mdpi" />
  	<splash src="splashscreen/android/port-xhdpi.png" density="port-xhdpi" />
  	<splash src="splashscreen/android/port-xxhdpi.png" density="port-xxhdpi" />
  	<splash src="splashscreen/android/port-xxxhdpi.png" density="port-xxxhdpi" /> 
  </platform>
  <platform name="ios">
  	<splash src="res/screen/ios/Default@2x~universal~anyany.png" />
  	<splash src="res/screen/ios/Default@2x~universal~comany.png" />
  	<splash src="res/screen/ios/Default@2x~universal~comcom.png" />
  	<splash src="res/screen/ios/Default@3x~universal~anyany.png" />
  	<splash src="res/screen/ios/Default@3x~universal~anycom.png" />
  	<splash src="res/screen/ios/Default@3x~universal~comany.png" />
  </platform>
  <platform name="windows">
  	<splash src="res/screen/windows/splashscreen.png" target="SplashScreen" />
  	<splash src="res/screen/windows/splashscreenphone.png" target="SplashScreenPhone" />
  </platform>
  
  <!-- cordova-plugin-whitelist -->
  <plugin name="cordova-plugin-whitelist" source="npm" spec="1.3.4" />
  <access origin="*" />
  <access origin="mailto:*" launch-external="yes" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  
  <!-- cordova-plugin-inappbrowser -->
  <plugin name="cordova-plugin-inappbrowser" spec="4.0.0" />
  
  <!-- cordova-plugin-geolocation -->
  <plugin name="cordova-plugin-geolocation" source="npm" spec="4.0.2" />
  
  <!-- cordova-plugin-geolocation-android-activator -->
  <plugin name="cordova-plugin-geolocation-android-activator" source="npm" spec="1.1.2" />
  
  <!-- cordova-plugin-dialogs -->
  <plugin name="cordova-plugin-dialogs" source="npm" spec="2.0.2" />
  
  <!-- cordova-plugin-file -->
  <plugin name="cordova-plugin-file" source="npm" spec="6.0.2" />
  
  <!-- cordova-plugin-file-transfer -->
  <plugin name="cordova-plugin-file-transfer" source="npm" spec="1.7.1" />
  
</widget>